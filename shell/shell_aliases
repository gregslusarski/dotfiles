# TERMINAL # {{{1
alias ..='cd ..'
alias qq='exit'
alias c='clear'
alias r='reset'
alias lsd='ls -d -- */'
alias ll='ls -l'
alias la='ls -a'
alias l.='ls -ld .[^.]*'
alias l='ls -CF'

# BOOKMARKS # {{{1
alias cdw='cd ~/workspace'
alias cdr='cd ~/workspace/ruby'
alias cdra='cd ~/workspace/ruby/rails'
alias cds='cd ~/workspace/stuff'
alias cdsc='cd ~/scripts'
alias cdd='cd ~/dotfiles'
alias cddl='cd ~/Downloads'

# APT # {{{1
alias sagi='sudo apt-get install'
alias sagr='sudo apt-get remove'
alias saga='sudo apt-get autoremove'
alias sagu='sudo apt-get update'
alias saar='sudo add-apt-repository'
alias up='vim +BundleInstall! +BundleClean +qall && sudo apt-get update && sudo apt-get upgrade && sudo apt-get clean'

# GIT # {{{1
alias gcl='git clone'
alias gi='git init'
alias gps='git push'
alias gpl='git pull'
# stage
alias ga='git add'
# unstage
alias grs='git reset'
alias ga.='git add .'
alias gau='git add -u'
alias gc='git commit'
alias gci='git commit -m'
alias gcia='git commit -am'
alias gciam='git commit --ammend -m'
alias gstf='git status'
alias gst='git status -s --branch'
alias gstis='git status --ignore-submodules'
alias glg='git log --stat -p'
alias glgo='git log --oneline'
alias gdf='git diff'
alias gdfh='git diff HEAD'
alias gdfs='git diff --staged'
alias gdfis='git diff --ignore-submodules'
alias gco='git checkout'
alias grb='git rebase'
alias gbr='git branch'
alias gsma='git submodule add'
alias gsmi='git submodule init'
alias gsmu='git submodule update'
alias gsmui='git submodule update --init'
alias grtaog='git remote add origin'
alias gpsuogmt='git push -u origin master'
alias gplsub='git submodule foreach "git pull origin master"'
alias grm='git rm'
alias grmc='git rm --cached'

# VIM # {{{1
alias v='vim'
alias gv='gvim'
alias vdf='vimdiff'

# TMUX # {{{1
alias tmux='TERM=screen-256color-bce tmux'
alias t='TERM=screen-256color-bce tmux'

# PYTHON # {{{1
alias py='python'
alias bpy='bpython'
# Django
alias dasp='django-admin.py startproject'

# RUBY # {{{1
alias rb='ruby'
# Rails
alias ra='rails'

# ACK-GREP # {{{1
alias ack='ack-grep'
alias ag='ack-grep -i --follow'
alias agt='ack-grep -i --follow --text'
alias agr='ack-grep -i --follow --ruby'
alias agv='ack-grep -i --follow --vim'
alias agp='ack-grep -i --follow --python'

# FIND FILE / DIR # {{{1
alias ff='sudo find / -type f -name'
alias fd='sudo find / -type d -name'

# CREATE FILE / DIR # {{{1
alias mf='touch'
alias md='mkdir -p'

# EXTRACTING # {{{1
alias gz='tar xvzf'
alias bz2='tar xvjf'

# DU / DF (FILE / DISK SPACE USAGE) # {{{1
alias du='du -hs * | sort -h'
alias df='df -h'
